import java.util.Scanner;
public class GuessNumber  {

	public static void main(String[] args) {
		int min,max,secretNumber;
		int guess = -1;

		Scanner scan = new Scanner(System.in);
		
		System.out.print("Skriv in det minsta talet: ");
		min = scan.nextInt();
		System.out.println();
		
		System.out.print("Skriv in det största talet: ");
		max = scan.nextInt();
		System.out.println();
		
		
		NumberGenerator numgen = new NumberGenerator(min,max);
		min = numgen.getMin();
		max = numgen.getMax();
		
		guess = scan.nextInt();


		numgen.drawNbr();
		while(!numgen.isEqual(guess)){
			
			if(numgen.isBiggerThan(guess)) {
				System.out.println("Talet är större än det gissade talet");
				guess = scan.nextInt();

			}
			else { 
				System.out.println("Talet är Mindre än det gissade talet");
				guess = scan.nextInt();

			}
		}
		numgen.printNbr();

	}

}
