import java.util.Scanner;
public class GuessNumber  {

	public static void main(String[] args) {
		int min,max,secretNumber;
		int guess = -1;

		Scanner scan = new Scanner(System.in);
		
		System.out.print("Skriv in det minsta talet: ");
		min = scan.nextInt();
		System.out.println();
		
		System.out.print("Skriv in det största talet: ");
		max = scan.nextInt();
		System.out.println();
		
		NumberGenerator numgen = new NumberGenerator(max,min);
		min = numgen.getMin();
		max = numgen.getMax();


		numgen.drawNbr();
		while(!numgen.isEqual(guess)){
			guess = scan.nextInt();
			if(numgen.isBiggerThan(guess)) {
				System.out.println("Talet är större än det gissade talet");
				System.out.println();
			}
			else if(numgen.isSmallerThan(guess)) {
				System.out.println("Talet är större än det gissade talet");
				System.out.println();
			}
		}
		numgen.printNbr();

	}

}
